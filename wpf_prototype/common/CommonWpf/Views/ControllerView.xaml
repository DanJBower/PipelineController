<UserControl x:Class="CommonWpf.Views.ControllerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:CommonWpf.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=viewModels:ControllerViewModel, IsDesignTimeCreatable=True}"
             d:Background="{DynamicResource SystemControlPageBackgroundAltHighBrush}">
    <Border Padding="10">
        <Grid IsSharedSizeScope="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Grid.Column="0"
                   Grid.Row="0"
                   Content="Joysticks"
                   FontSize="20" />

            <Label Grid.Column="1"
                   Grid.Row="0"
                   Content="Triggers"
                   FontSize="20" />

            <Label Grid.Column="0"
                   Grid.Row="2"
                   Content="D-Pad"
                   FontSize="20" />

            <Grid Grid.Column="0"
                  Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <DockPanel Grid.Column="0"
                           Grid.Row="0"
                           Background="{DynamicResource ButtonNotActiveBrush}"
                           Margin="5">
                    <TextBlock Text="Up"
                               TextWrapping="Wrap"
                               FontSize="30"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               VerticalAlignment="Center" />
                </DockPanel>

                <DockPanel Grid.Column="1"
                           Grid.Row="0"
                           Background="{DynamicResource ButtonNotActiveBrush}"
                           Margin="5">
                    <TextBlock Text="Right"
                               TextWrapping="Wrap"
                               FontSize="30"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               VerticalAlignment="Center" />
                </DockPanel>

                <DockPanel Grid.Column="2"
                           Grid.Row="0"
                           Background="{DynamicResource ButtonNotActiveBrush}"
                           Margin="5">
                    <TextBlock Text="Down"
                               TextWrapping="Wrap"
                               FontSize="30"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               VerticalAlignment="Center" />
                </DockPanel>

                <DockPanel Grid.Column="3"
                           Grid.Row="0"
                           Background="{DynamicResource ButtonNotActiveBrush}"
                           Margin="5">
                    <TextBlock Text="Left"
                               TextWrapping="Wrap"
                               FontSize="30"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               VerticalAlignment="Center" />
                </DockPanel>
            </Grid>


            <Label Grid.Column="1"
                   Grid.Row="2"
                   Content="Action Buttons"
                   FontSize="20" />

            <Grid Grid.Column="1"
                  Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <DockPanel Grid.Column="0"
                           Grid.Row="0"
                           Background="{DynamicResource ButtonNotActiveBrush}"
                           Margin="5">
                    <TextBlock Text="A"
                               TextWrapping="Wrap"
                               FontSize="30"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Foreground="White"
                               VerticalAlignment="Center" />
                </DockPanel>

                <DockPanel Grid.Column="1"
                           Grid.Row="0"
                           Background="{DynamicResource ButtonNotActiveBrush}"
                           Margin="5">
                    <TextBlock Text="B"
                               TextWrapping="Wrap"
                               FontSize="30"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Foreground="White"
                               VerticalAlignment="Center" />
                </DockPanel>

                <DockPanel Grid.Column="2"
                           Grid.Row="0"
                           Background="{DynamicResource ButtonNotActiveBrush}"
                           Margin="5">
                    <TextBlock Text="X"
                               TextWrapping="Wrap"
                               FontSize="30"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Foreground="White"
                               VerticalAlignment="Center" />
                </DockPanel>

                <DockPanel Grid.Column="3"
                           Grid.Row="0"
                           Background="{DynamicResource ButtonNotActiveBrush}"
                           Margin="5">
                    <TextBlock Text="Y"
                               TextWrapping="Wrap"
                               FontSize="30"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Foreground="White"
                               VerticalAlignment="Center" />
                </DockPanel>
            </Grid>


            <Label Grid.Column="0"
                   Grid.Row="4"
                   Content="Menu Buttons"
                   FontSize="20" />

            <Grid Grid.Column="0"
                  Grid.Row="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <DockPanel Grid.Column="0"
                           Grid.Row="0"
                           Background="{DynamicResource ButtonNotActiveBrush}"
                           Margin="5">
                    <TextBlock Text="Start"
                               FontSize="30"
                               TextWrapping="Wrap"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               VerticalAlignment="Center" />
                </DockPanel>

                <DockPanel Grid.Column="1"
                           Grid.Row="0"
                           Background="{DynamicResource ButtonNotActiveBrush}"
                           Margin="5">
                    <TextBlock Text="Select"
                               FontSize="30"
                               TextWrapping="Wrap"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               VerticalAlignment="Center" />
                </DockPanel>

                <DockPanel Grid.Column="2"
                           Grid.Row="0"
                           Background="{DynamicResource ButtonNotActiveBrush}"
                           Margin="5">
                    <TextBlock Text="Touch Pad"
                               FontSize="30"
                               TextWrapping="Wrap"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               VerticalAlignment="Center" />
                </DockPanel>

                <DockPanel Grid.Column="3"
                           Grid.Row="0"
                           Background="{DynamicResource ButtonNotActiveBrush}"
                           Margin="5">
                    <TextBlock Text="Home"
                               FontSize="30"
                               TextWrapping="Wrap"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               VerticalAlignment="Center" />
                </DockPanel>
            </Grid>

            <Label Grid.Column="1"
                   Grid.Row="4"
                   Content="Bumpers / Joystick In"
                   FontSize="20" />

            <Grid Grid.Column="1"
                  Grid.Row="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <DockPanel Grid.Column="0"
                           Grid.Row="0"
                           Background="{DynamicResource ButtonNotActiveBrush}"
                           Margin="5">
                    <TextBlock Text="LB"
                               FontSize="30"
                               TextWrapping="Wrap"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               VerticalAlignment="Center" />
                </DockPanel>

                <DockPanel Grid.Column="1"
                           Grid.Row="0"
                           Background="{DynamicResource ButtonNotActiveBrush}"
                           Margin="5">
                    <TextBlock Text="RB"
                               FontSize="30"
                               TextWrapping="Wrap"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               VerticalAlignment="Center" />
                </DockPanel>

                <DockPanel Grid.Column="2"
                           Grid.Row="0"
                           Background="{DynamicResource ButtonNotActiveBrush}"
                           Margin="5">
                    <TextBlock Text="L3"
                               FontSize="30"
                               TextWrapping="Wrap"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               VerticalAlignment="Center" />
                </DockPanel>

                <DockPanel Grid.Column="3"
                           Grid.Row="0"
                           Background="{DynamicResource ButtonNotActiveBrush}"
                           Margin="5">
                    <TextBlock Text="R3"
                               FontSize="30"
                               TextWrapping="Wrap"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               VerticalAlignment="Center" />
                </DockPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
